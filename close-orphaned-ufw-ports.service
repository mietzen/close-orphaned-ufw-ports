[Unit]
Description=Route external traffic over ISP gateway, external services are discovered via UFW rules
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/bin/bash /usr/bin/close-orphaned-ufw-ports start
ExecStop=/bin/bash /usr/bin/close-orphaned-ufw-ports stop


[Install]
WantedBy=multi-user.target
